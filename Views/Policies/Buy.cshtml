@model HealthInsurance.Models.PoliciesReqDetail
@{
    ViewData["Title"] = "Buy";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
<meta name="viewport" content="width=device-width, initial-scale=1">
<style>
* {box-sizing: border-box;}

body { 
  margin: 0;
  font-family: Arial, Helvetica, sans-serif;
  background-color: #333;
  color: white;
}

.header {
  overflow: hidden;
  background-color: #f1f1f1;
  padding: 20px 10px;
}

.header a {
  float: left;
  color: black;
  text-align: center;
  padding: 12px;
  text-decoration: none;
  font-size: 18px; 
  line-height: 25px;
  border-radius: 4px;
}

.header a.logo {
  font-size: 25px;
  font-weight: bold;
}

.header a:hover {
  background-color: #ddd;
  color: black;
}

.header a.active {
  background-color: #333;
  color: white;
}

.header-right {
  float: right;
}


a{
  color: white;
  text-decoration: none;
}
.table{
  box-shadow: rgba(252, 252, 252, 0) 5px 7px 15px;
  padding: 10px 0 50px ;
    border-collapse: collapse ;
                                 width: 100%;
}
                        table {
                                 
                                 
                                 border-collapse: collapse ;
                                 width: 100%;
                               }
                               
                               td, th {
                                 border: 1px solid white;
                                 text-align: left;
                                 padding: 8px;
                               }
                               
                               tr:nth-child(1) th {
                                
                                 border: 2px solid #666;
                                 
                               }
                               
                               tr:nth-child(1) {
                                
                                 background-color: white;
                                 color: #333;
                               }
                               
        button {
            width: 40%;
            color: black;
            padding: 15px;
            margin: 10px 30%;
            border: none;
            cursor: pointer;
            border-radius: 5px;
            font-size: 18px;
            
            background-color: #ffdddd!important;
        }

        form {
            margin: 0 200px;
            
        }

        input[type=text], input[type=password], input[type=email], select {
            width: 100%;
            margin: 8px 0;
            padding: 12px 20px;
            display: inline-block;
            box-sizing: border-box;
            border: 2px solid black;
            border-radius: 5px;
            box-shadow: rgba(255, 255, 255, 0.35) 5px 7px 15px;
            
        }

        button:hover {
            opacity: 0.7;
        }

        .cancelbtn {
            width: auto;
            padding: 10px 18px;
            margin: 10px 5px;
        }


        .container input::placeholder{
            font-size: 18px;
            
        }
        .container {
            padding: 25px;
            background: color #333;;
            border-radius: 5px;
            font-size: 20px;
            font-weight: 500;
            box-shadow: rgba(255, 255, 255, 0.35) 5px 7px 15px;
        }
</style>
</head>
<body>

  <div class="header">
    <a href="index.html" class="logo">Health Insurance - Admin</a>
    <div class="header-right">
      <a class="active"  
          <a asp-action="Index" >Policies</a> |
            <a asp-action="Company" asp-controller="Home">Company</a>|
            <a asp-action="Employee" asp-controller="Home">Employee</a>|
            <a asp-action="Logout" asp-controller="Home">Log out</a>|
    </div>
  </div>
  
<h1 style="padding:0  250px;">Employee Update Page</h1>
 <div class="table">


        <form asp-controller="Policies" asp-action="Buy" asp-route-id="@Model.PolicyId" method="post">

            <div class="form-group row">
                <label class="col-sm-3 col-form-label" for="policiId">Policy ID:</label>
                <div class="col-sm-9">
                    <input asp-for="PolicyId" type = "text" class="form-control" readonly="readonly" />
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-3 col-form-label" for="policyName">Policy Name:</label>
                <div class="col-sm-9">
                    <input asp-for="PolicyName" class="form-control" readonly="readonly" />

                </div>
            </div>

            
            <div class="form-group row">
                <label class="col-sm-3 col-form-label" for="policyAmount">Employee ID:</label>
                <div class="col-sm-9">
                    <input asp-for="EmployeeId" type="text" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-3 col-form-label" for="policyAmount">Policy Amount:</label>
                <div class="col-sm-9">
                    <input asp-for="PolicyAmount" class="form-control" readonly="readonly" />
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-3 col-form-label" for="Emi">EMI:</label>
                <div class="col-sm-9">
                    <input asp-for="Emi" class="form-control" readonly="readonly" />
                </div>
            </div>


            <div class="form-group row">
                <label class="col-sm-3 col-form-label" for="companyName">Company Name:</label>
                <div class="col-sm-9">
                    <input asp-for="CompanyName" class="form-control" readonly="readonly" />

                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-3 col-form-label" for="companyId">Company ID:</label>
                <div class="col-sm-9">
                    <input asp-for="CompanyId"  type = "text" class="form-control" readonly="readonly" />

                </div>
            </div>

            <br />

            <div class="form-group row">
                <div class="col-sm-9 offset-sm-3">
                    <button class="btn btn-primary" type="submit" style="border: 1px solid black">Add Policy</button>
                    <a class="btn btn-secondary" style="color:white" asp-action=" Index">Cancel</a>
                </div>
            </div>
        </form>



    </div>

</body>
</html>